            android:name="api_key"
            android:value="unkDGrSxE8nGEYz7Ne9p0RYG" />

        <meta-data
            android:name="UMENG_APPKEY"
            android:value="561dc86ee0f55af087008f6a" />

        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="developer" />

