<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/grade"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_grade_s"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/round_button_grade"
                        android:text="@string/s"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25" />

                    <Button
                        android:id="@+id/btn_grade_a"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/round_button_grade"
                        android:text="@string/a"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25" />

                    <Button
                        android:id="@+id/btn_grade_b"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/round_button_grade"
                        android:text="@string/b"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25" />

                    <Button
                        android:id="@+id/btn_grade_c"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/round_button_grade"
                        android:text="@string/c"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25" />

                    <Button
                        android:id="@+id/btn_grade_d"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/round_button_grade"
                        android:text="@string/d"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/desc"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:background="@drawable/round_edittext"
                    android:gravity="top"
                    android:minLines="2"
                    android:padding="10dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/insertImage"
                    android:textSize="16sp" />

                <GridView
                    android:id="@+id/gv_publish"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:horizontalSpacing="4dp"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:verticalSpacing="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/executor"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.75"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/round_edittext"
                        android:gravity="center_vertical"
                        android:minWidth="150dp"
                        android:paddingLeft="10dp"
                        android:text="@string/choose"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/supervisor"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/round_edittext"
                        android:gravity="center_vertical"
                        android:minWidth="150dp"
                        android:paddingLeft="10dp"
                        android:text="@string/choose"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/auditor"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/round_edittext"
                        android:gravity="center_vertical"
                        android:minWidth="150dp"
                        android:paddingLeft="10dp"
                        android:text="@string/choose"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/deadline"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/round_edittext"
                        android:gravity="center_vertical"
                        android:minWidth="150dp"
                        android:paddingLeft="10dp"
                        android:text="@string/choose"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/publishTime"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.75"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_publishTime"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/round_edittext"
                        android:gravity="center_vertical"
                        android:minWidth="150dp"
                        android:paddingLeft="10dp"
                        android:text="@string/choose"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <com.jiubai.taskmoment.view.RippleView
                android:id="@+id/rv_btn_publish"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                app:rv_rippleDuration="200"
                app:rv_type="rectangle">

                <Button
                    android:id="@+id/btn_publish"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/round_button_login"
                    android:text="@string/publish"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </com.jiubai.taskmoment.view.RippleView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>