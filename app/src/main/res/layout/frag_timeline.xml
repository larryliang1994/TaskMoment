<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_timeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jiubai.taskmoment.view.BorderScrollView
            android:id="@+id/sv_timeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:background="#ffffff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:animateLayoutChanges="true">

                    <ImageView
                        android:id="@+id/iv_companyBackground"
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/background_default" />

                    <ImageView
                        android:id="@+id/iv_portrait"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/rectangle"
                        android:padding="1.5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/portrait_default"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/tv_timeline_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="40dp"
                        android:layout_marginRight="12dp"
                        android:layout_toLeftOf="@id/iv_portrait"
                        android:shadowColor="#000000"
                        android:shadowRadius="3"
                        android:text="@string/nickname"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/tv_add_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="135dp"
                        android:gravity="center_horizontal"
                        android:text="@string/add_company_background"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_news"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/round_button_grade"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="7dp">

                    <ImageView
                        android:id="@+id/iv_news_portrait"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/portrait_default" />

                    <TextView
                        android:id="@+id/tv_news_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/tv_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="@string/news_num"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </LinearLayout>

                <ListView
                    android:id="@+id/lv_timeline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#ffffff" />

                <Space
                    android:id="@+id/space"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>
        </com.jiubai.taskmoment.view.BorderScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_space_comment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="#ffffff"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:minHeight="48dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <EditText
                        android:id="@+id/edt_comment_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/comment"
                        android:maxLines="4"
                        android:minHeight="48dp"
                        android:paddingTop="6dp"
                        android:singleLine="false"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#259b24" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_comment_send"
                    style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/send"
                    android:textColor="#03a9f4"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_audit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_space_audit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="5dp">

            <RadioGroup
                android:id="@+id/rg_audit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:scrollbars="none">

                <RadioButton
                    android:id="@+id/rb_solved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/solved"
                    android:textColor="#767676" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3" />

                <RadioButton
                    android:id="@+id/rb_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/complete"
                    android:textColor="#767676" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3" />

                <RadioButton
                    android:id="@+id/rb_failed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_failed"
                    android:textColor="#767676" />
            </RadioGroup>

            <Button
                android:id="@+id/btn_audit_send"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_button_white"
                android:text="@string/ok"
                android:textColor="#767676"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>