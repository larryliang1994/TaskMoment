<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_timeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jiubai.taskmoment.view.BorderScrollView
            android:id="@+id/sv_timeline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <ImageView
                        android:id="@+id/iv_companyBackground"
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:src="@drawable/background"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_portrait"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/rectangle"
                        android:padding="1.5dp"
                        android:src="@drawable/portrait"
                        android:scaleType="centerInside"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/tv_timeline_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="40dp"
                        android:layout_marginRight="12dp"
                        android:layout_toLeftOf="@id/iv_portrait"
                        android:shadowColor="#000000"
                        android:shadowRadius="3"
                        android:text="@string/author"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        tools:ignore="RtlHardcoded" />
                </RelativeLayout>

                <ListView
                    android:id="@+id/lv_timeline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#ffffff" />
            </LinearLayout>
        </com.jiubai.taskmoment.view.BorderScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_comment_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_edittext"
                android:hint="@string/comment"
                android:paddingLeft="10dp"
                android:singleLine="false"
                android:paddingRight="10dp"
                android:maxLines="4"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_comment_send"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom"
                android:background="@drawable/round_button_white"
                android:text="@string/send"
                android:textColor="#767676"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_audit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <RadioGroup
                android:id="@+id/rg_audit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:scrollbars="none">

                <RadioButton
                    android:id="@+id/rb_solved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/solved"
                    android:textColor="#767676" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3" />

                <RadioButton
                    android:id="@+id/rb_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/complete"
                    android:textColor="#767676" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3" />

                <RadioButton
                    android:id="@+id/rb_failed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_failed"
                    android:textColor="#767676" />
            </RadioGroup>

            <Button
                android:id="@+id/btn_audit_send"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_button_white"
                android:text="@string/ok"
                android:textColor="#767676"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>